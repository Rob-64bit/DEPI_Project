@{
    ViewData["Title"] = "Log In - Seaside Hotel";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login-styles.css" />

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- Font Awesome (for eye icon) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Project CSS: ضع ملف login-styles.css داخل wwwroot/css/ -->
    <link rel="stylesheet" href="~/css/login-styles.css" asp-append-version="true" />
</head>
<body>
    <div class="page-container">

        <header class="logo-header">
            <a asp-controller="Home" asp-action="Index" class="logo">
                <div class="shell-icon" aria-hidden="true"></div>
                SEASIDE HOTEL
            </a>
        </header>

        <div class="login-box">
            <h2 class="log-in-title">Log In</h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="text-danger">@err.ErrorMessage</div>
                    }
                </div>
            }

            <form asp-action="Login" asp-controller="Auth" method="post" class="login-form">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="usernameOrEmail">Email or Username</label>
                    <input id="usernameOrEmail" name="usernameOrEmail" class="form-control" autocomplete="username" placeholder="Email address or username" />
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="password-field">
                        <input id="password" name="password" type="password" class="form-control" autocomplete="current-password" placeholder="Password" />
                        <button type="button" class="password-toggle" title="Show / hide password" aria-label="Toggle password">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-group remember-me-group">
                    <input type="checkbox" id="remember" name="remember" />
                    <label for="remember">Remember me</label>
                </div>

                <button type="submit" class="btn primary-btn">Log In</button>

                <div class="form-links">
                    <a asp-controller="Auth" asp-action="ForgotPassword">Forgot password?</a>
                </div>
            </form>
        </div>
    </div>

   
</body>
</html>
