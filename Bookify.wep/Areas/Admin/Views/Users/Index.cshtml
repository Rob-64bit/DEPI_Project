@model IEnumerable<Bookify.Domain.Entities.Usere>
@{
    ViewData["Title"] = "Manage Users";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/userpage.css" />

</head>
<body>
    <div class="container-fluid py-4">
        <div class="mt-3">
            <a href="/Admin/Dashboard/Index" class="btn btn-secondary">← Back to Dashboard</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body> </html>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2">Manage Users</h1>
            <p class="text-muted">View and manage all registered users</p>
        </div>
        <span class="badge bg-primary" style="font-size: 1rem; padding: 10px 20px;">
            👥 @Model.Count() Total Users
        </span>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            ✓ @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            ⚠ @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Admin Users</h6>
                    <h2>@Model.Count(u => u.UserRole == "admin")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Regular Users</h6>
                    <h2>@Model.Count(u => u.UserRole != "admin")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Total Users</h6>
                    <h2>@Model.Count()</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <strong>Users List</strong>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.OrderBy(u => u.UserId))
                    {
                        var isCurrentUser = user.UserId == Context.Session.GetInt32("UserId");
                        <tr style="@(isCurrentUser ? "background:#fffbea;" : "")">
                            <td>
                                <strong>#@user.UserId</strong>
                                @if (isCurrentUser)
                                {
                                    <span class="badge bg-warning text-dark">You</span>
                                }
                            </td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.UserRole == "admin")
                                {
                                    <span class="badge bg-success">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">User</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (user.UserRole == "admin")
                                {
                                    if (!isCurrentUser)
                                    {
                                        <form method="post" action="/Admin/Users/RemoveAdmin?id=@user.UserId" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-warning"
                                                    onclick="return confirm('Remove admin from @user.UserName?');">
                                                Remove Admin
                                            </button>
                                        </form>
                                    }
                                }
                                else
                                {
                                    <form method="post" action="/Admin/Users/MakeAdmin?id=@user.UserId" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success"
                                                onclick="return confirm('Make @user.UserName admin?');">
                                            Make Admin
                                        </button>
                                    </form>
                                }

                                @if (!isCurrentUser)
                                {
                                    <form method="post" action="/Admin/Users/Delete?id=@user.UserId" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Delete @user.UserName? This will delete their bookings too!');">
                                            Delete
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="/Admin/Dashboard/Index" class="btn btn-secondary">← Back to Dashboard</a>
    </div>
</div>